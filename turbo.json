{
  "$schema": "https://turbo.build/schema.json",
  "ui" : "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".vitepress/dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "preview": {
      "dependsOn": ["build"]
    }
  }
}